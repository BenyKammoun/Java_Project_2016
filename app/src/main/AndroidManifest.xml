<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a2016.proj.bensimhon.kamoun.java_project_2016">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.LogInActivity"></activity>
        <activity android:name=".controller.SignUpActivity" />
        <activity
            android:name=".controller.Wellcome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wellcome"
            android:theme="@style/FullscreenTheme" />

        <provider
            android:name=".model.backend.ListDbContentProvider"
            android:authorities="com.a2016.proj.list"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name=".model.backend.SqlProvider"
            android:authorities="com.a2016.proj.sql"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".model.backend.MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.a2016.academy.proj.Action" />
            </intent-filter>
        </receiver>

        <service
            android:name=".model.backend.MyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".controller.mainTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>